<% provide(:title, "Faturamento | #{@client.cnpj.trading_name}") %>

<h1 class="page-header"><%= "#{@client.cnpj.trading_name}" %></h1>

<div id="accordion" role="tablist" aria-multiselectable="true">
<% if @revenues.count == 0 %>
    <%= link_to "Iniciar faturamento", revenues_start_path(@client.id), class: "btn"%>
<% else %>
  <% @revenues.each do |revenue| %>
  <div class="card">
    <div class="card-header" role="tab" id="headingOne">
      <h5 class="mb-0">
        <a data-toggle="collapse" data-parent="#accordion" href="#collapseOne" aria-expanded="true" aria-controls="collapseOne">
          <div class="row" style="background-color: #F1F1F1; box-shadow: 5px 5px 5px #888888;">
            <div class="col-md-12">
              <h2>Outubro</h2>
            </div>
          </div>
        </a>
      </h5>
    </div>

    <div id="collapseOne" class="collapse in" role="tabpanel" aria-labelledby="headingOne">
      <div class="card-block">
        <%= render partial: '/revenues/month', :locals => {revenue: revenue} %>
      </div>
    </div>
  </div>
  <% end %>
<% end %>