<tr>
  <th>Registro(s)</th>
  <th>Operador Lógico</th>
  <th>Peso</th>
  <th>Valor</th>
  <th>Ações</th>
</tr>
  <%= fields_for :table_tax_rules do |row_rule| %>
  <tr>
    <td class="column-container-choise">
      <div>
        <div class="form-group">
          <%=row_rule.select :row_ids, table_tax.rows_options, {}, :multiple => true, :class => "form-control chosen-select rule-row-ids", 'data-placeholder'=>"Selecione o(s) tributo(s)" %>
        </div>
      </div>
    </td>
    <td>
      <div class="form-group">
        <%=row_rule.select :operator, TaxRule.operator_options, {}, :class => "form-control rule-operator" %>
      </div>
    </td>
    <td>
        <div class="form-group">
        <%=row_rule.select :measurement, TaxRule.measurement_options, {}, :class => "form-control rule-measurement" %>
        </div>
    </td>
    <td>
      <div class="form-group">
        <%= row_rule.number_field :value, class: "form-control input-row rule-value", placeholder: "0.0", min: 0, :step => 0.01 %>
      </div>
    </td>
    <td>
      <%= link_to(create_rule_path, class:"btn btn-primary add-table-tax-rule") do %>
        <i class="fa fa-check" aria-hidden="true"></i>
      <% end %>

    </td>
  </tr>
  <% end %>